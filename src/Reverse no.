public class reverse {
    int n;

    reverse(int rev) {
        n = rev;
    }
        public void chk (){
            int sum = 0;
            int r;
            int c = n;
            while (c > 0) {
                r = c % 10;
                sum = sum * 10 + r;
                c = c / 10;
            }
            System.out.println("Reverse of no.is" + sum);

        }

        public static void main (String[]args){
            reverse obj = new reverse(456);
            obj.chk();
        }
